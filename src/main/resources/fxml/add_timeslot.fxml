<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.isec.gps2324.gps_g14.App.Controllers.AddTimeslotController">
   <fx:define>
      <Integer fx:id="hourMin" fx:value="0"/>
      <Integer fx:id="hourMax" fx:value="23"/>
      <Integer fx:id="minuteMin" fx:value="0"/>
      <Integer fx:id="minuteMax" fx:value="59"/>
    </fx:define>
   <children>
      <HBox layoutX="10.0" layoutY="213.0" prefHeight="29.0" prefWidth="278.0">
         <children>
            <Label text="Start Date">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" top="5.0" />
               </HBox.margin>
            </Label>
            <DatePicker fx:id="startDatePicker" />
         </children>
      </HBox>
      <HBox prefHeight="29.0" prefWidth="278.0">
         <children>
            <Label text="Start Hours">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" top="5.0" />
               </HBox.margin>
            </Label>
            <Spinner fx:id="startHourSpinner" min="$hourMin" max="$hourMax" editable="true" />
         </children>
      </HBox>
      <HBox layoutX="10.0" layoutY="144.0" prefHeight="29.0" prefWidth="278.0">
         <children>
            <Label text="Start Minutes">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" top="5.0" />
               </HBox.margin>
            </Label>
            <Spinner fx:id="startMinuteSpinner" min="$minuteMin" max="$minuteMax" editable="true" />
         </children>
      </HBox>
      <Pane prefHeight="18.0" prefWidth="278.0" />
      <HBox layoutX="10.0" layoutY="160.0" prefHeight="29.0" prefWidth="278.0">
         <children>
            <Label text="Finish Date">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" top="5.0" />
               </HBox.margin>
            </Label>
            <DatePicker fx:id="finishDatePicker" />
         </children>
      </HBox>
      <HBox prefHeight="29.0" prefWidth="278.0">
         <children>
            <Label text="Finish Hours">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" top="5.0" />
               </HBox.margin>
            </Label>
            <Spinner fx:id="finishHourSpinner" min="$hourMin" max="$hourMax" editable="true" />
         </children>
      </HBox>
      <HBox layoutX="10.0" layoutY="144.0" prefHeight="29.0" prefWidth="278.0">
         <children>
            <Label text="Finish Minutes">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" top="5.0" />
               </HBox.margin>
            </Label>
            <Spinner fx:id="finishMinuteSpinner" min="$minuteMin" max="$minuteMax" editable="true" />
         </children>
      </HBox>
      <ToolBar prefHeight="54.0" prefWidth="276.0">
        <items>
          <Button fx:id="add" alignment="CENTER" mnemonicParsing="false" prefHeight="26.0" prefWidth="97.0" text="Add Timeslot" />
            <Button fx:id="cancell" alignment="CENTER" mnemonicParsing="false" prefHeight="26.0" prefWidth="84.0" text="Cancel" textAlignment="CENTER" />
        </items>
      </ToolBar>
   </children>
</VBox>
